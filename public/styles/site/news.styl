.news-page
  margin-left 200px
  padding 20px 40px

  h1
    margin 0
    font-size 30px
    font-weight 100

  .news-block
    margin 20px 15px
    font-size 14px

    a
      display block
      text-decoration none
      color #000
      margin-bottom 15px

    p
      line-height 16px

    .title
      font-size 18px

    img
      width 400px
      margin-bottom 25px
    .full-news
      display none

    .button-news
      border 1px solid black
      cursor pointer
      width 130px
      margin 0 auto
      text-align center
      padding 5px 0
      color #000
      transition all .2s ease-in-out

      &:hover
        color #fff
        background-color #993333
        border 1px solid #993333
