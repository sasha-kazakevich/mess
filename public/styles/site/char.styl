/* --------------------------------

Navigation

-------------------------------- */
.cd-side-navigation {
  position: fixed;
  z-index: 3;
  top: 0;
  left: 0;
  height: 100vh;
  width: 200px;
  overflow: hidden; }
.cd-side-navigation::before {
  /* background color of the side navigation */
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: -webkit-calc(100% - 4px);
  width: calc(100% - 4px);
  background-color: #262626; }
.cd-side-navigation h1 {
  font-size: 18px;
  color: #fff;
  position: relative;
  margin: 20px 0 52px;
  z-index: 1;
  text-align: center; }
.cd-side-navigation ul {
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch; }
.cd-side-navigation li {
  margin-bottom: 27px; }
.cd-side-navigation li:first-child a::before {
  top: 16px; }
.cd-side-navigation a {
  display: block;
  position: relative;
  padding: 10px 15px 10px 50px;
  font-size: 11px;
  text-align: left;
  color: white;
  line-height: 1;
  text-decoration: none; }
.cd-side-navigation a::before {
  content: '';
  position: absolute;
  width: 20px;
  height: 20px;
  background: url("../images/char/marker.png") no-repeat center center;
  top: 6px;
  left: 12px; }
.cd-side-navigation a::after {
  /* 4px line to the right of the item - visible on hover */
  content: '';
  position: absolute;
  top: 0;
  right: -4px;
  height: 100%;
  width: 4px;
  background-color: #83b0b9;
  opacity: 0;
  -webkit-transition: opacity 0.2s;
  -moz-transition: opacity 0.2s;
  transition: opacity 0.2s;
  pointer-events: none; }
.no-touch .cd-side-navigation a:hover {
  background-color: #993333;
}
.no-touch .cd-side-navigation a:hover::before {
  transform: rotate(90deg);
  transition: transform 0.1s linear; }
.cd-side-navigation a.selected, .no-touch .cd-side-navigation a.selected:hover {
  background-color: #7c2323;
  color: #fff; }
.cd-side-navigation a.selected::before, .no-touch .cd-side-navigation a.selected:hover::before {
  transform: rotate(90deg); }

